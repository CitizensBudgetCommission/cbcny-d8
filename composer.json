{
  "name": "forumone/cbcny",
  "description": "Citizens Budget Commission",
  "type": "project",
  "repositories": [
    {
      "type": "path",
      "url": "web/modules/custom/*"
    },
    {
      "type": "package",
      "package": {
        "name": "harvesthq/chosen",
        "version": "1.5.1",
        "type": "drupal-library",
        "dist": {
          "url": "https://github.com/harvesthq/chosen/releases/download/v1.5.1/chosen_v1.5.1.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://packagist.drupal-composer.org"
    }
  ],
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "~1.0",
    "drupal/core": "~8",
    "drush/drush": "~8",
    "drupal/console": "~1.0",
    "drupal/admin_toolbar": "~1.0",
    "drupal/pathauto": "~8.1.0",
    "drupal/yamlform": "~1.0",
    "drupal/twig_tweak": "~1.0",
    "drupal/paragraphs": "~8.1.0",
    "drupal/video_embed_field": "~8.1.0",
    "drupal/title": "~8.2.0",
    "drupal/template_mapper": "~8.1.0",
    "drupal/linkit": "~8.5.0",
    "drupal/image_url_formatter": "~8.1.0",
    "drupal/chosen": "~8.2.0",
    "drupal/focal_point": "~8.1.0",
    "drupal/field_group": "~8.1.0",
    "harvesthq/chosen": "*",
    "drupal/allowed_formats": "~8.1.0",
    "drupal/honeypot": "^8.1",
    "drupal/search_api": "8.1.0-alpha15",
    "drupal/facets": "8.1.0-alpha3",
    "drupal/search_api_solr": "8.1.0-alpha4"
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "drupal/devel": "~8",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsStream": "~1.2",
    "phpunit/phpunit": "~4.8",
    "symfony/css-selector": "~2.8"
  },
  "replace": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"],
      "web/libraries/{$name}": ["type:drupal-library"]
    },
    "patches": {
      "drupal/facets": {
        "Add default display for Facets to use": "./patches/drupal/facets/allow_default_view_source.patch"
      }
    }
  }
}
