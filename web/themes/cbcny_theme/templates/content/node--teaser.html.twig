{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--display-mode-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  <div class="post-info">
    <span class="post-info__item">{{ content.field_term_post_type }}</span><span class="post-info__item">{{ content.field_term_topic }}</span>
  </div>
  <h2 class="node__title"><a href="#">{{ label }}</a></h2>
  <div class="node__date">{{ content.field_published_date }}</div>
  {{ content.field_teaser_plain }}
</article>
