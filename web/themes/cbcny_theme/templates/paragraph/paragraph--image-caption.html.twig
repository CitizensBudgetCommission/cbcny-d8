{%
  set classes = [
    'section',
    'section--image-caption',
  ]
%}

<section{{ attributes.addClass(classes) }}>
  {{ content.field_image_upload }}
  {% if content.field_image_caption|render %}
    <div class="section__caption">
      {{ content.field_image_caption }}
    </div>
  {% endif %}
</section>
