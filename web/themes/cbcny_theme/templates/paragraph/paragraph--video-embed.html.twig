{%
  set classes = [
    'section',
    'section--video-caption',
    'section--type-' ~ paragraph.bundle|clean_class,
    view_mode ? 'section--view-mode-' ~ view_mode|clean_class,
  ]
%}

<section{{ attributes.addClass(classes) }}>
  {{ content.field_video_url }}
  {{ content.field_video_caption }}
</section>
