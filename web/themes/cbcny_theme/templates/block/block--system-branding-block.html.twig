{% extends "block--no-wrapper.html.twig" %}
{#
/**
 * @file
 * Theme override for the site branding block.
 */
#}
{% block content %}
  {% if site_name %}
    <div class="site-name">
      <a class="site-name__link" href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
        <h1 class="site-name__text">{{ site_name }}</h1>
      </a>
    </div>
  {% endif %}
  {% if site_slogan %}
    <div class="site-slogan">{{ site_slogan }}</div>
  {% endif %}
{% endblock %}
