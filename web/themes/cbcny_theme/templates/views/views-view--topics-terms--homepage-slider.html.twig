{%
  set classes = [
    'slick-carousel slick-carousel-topics',
    'view--' ~ id|clean_class,
    'view--display-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if title %}
    {{ title }}
  {% endif %}
  {{ title_suffix }}

  {% if header %}
    <div class="view__header">
      {{ header }}
    </div>
  {% endif %}

  {% if rows %}
    {{ rows }}
  {% elseif empty %}
    <div class="view__empty">
      {{ empty }}
    </div>
  {% endif %}

  {% if pager %}
    {{ pager }}
  {% endif %}
  {% if attachment_after %}
    <div class="attachment attachment--after">
      {{ attachment_after }}
    </div>
  {% endif %}

  {% if more %}
    {{ more }}
  {% endif %}

  {% if footer %}
    <div class="view__footer">
      {{ footer }}
    </div>
  {% endif %}

</div>
