{%
  set tid = content.field_term_topic.0['#plain_text']
%}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--display-mode-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>
  <div class="hero hero--feature hero--section-page">
    <div class="hero__content--feature l-constrain">
      <h1 class="page-title page-title--section-page">{{ content.title }}</h1>
      <div class="fullwidth-hide">
          {{ drupal_view('topics_terms', 'topic_menu', 'Choose a different topic') }}
      </div>
      {{ content.field_ref_featured_content }}
    </div>
  </div>

  <div class="l-constrain">
      {{ drupal_view('topic_section_list', 'default', tid) }}
      {{ drupal_view('topic_section_button') }}
    <div class="fullwidth-show">
      {{ drupal_view('topics_terms', 'topic_menu', 'Choose a different topic') }}
    </div>
  </div>
  <div class="fullwidth-show">
      {{ drupal_block('section_slider') }}
  </div>
</article>
