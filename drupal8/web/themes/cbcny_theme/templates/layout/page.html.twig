<div class="page">
  {{ page.header }}
  {{ page.navigation }}
  {{ page.highlighted }}
  {{ page.help }}
  {{ page.preface}}

  <main class="main" role="main" tabindex="-1">

    {% if page.sidebar_first %}
      <aside class="layout-sidebar-first" role="complementary">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    {{ page.content }}

    {% if page.sidebar_second %}
      <aside class="layout-sidebar-second" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}

  </main>

  {{ page.postscript }}

  {% if page.footer %}
    {{ page.footer }}
  {% endif %}

</div>
